<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Rajeev's Inclu Service</title>
</head>
<body>

    <%- include ('partials/navbar.ejs') %>
    <div class="container">
      <div class="text-center"><h2>Products</h2></div>
      <br>
      <table class="table table-hover small text-center">
        <thead>
            <tr>
              <th width="100">Category</th>
              <th width="50">Image</th>           
              <th width="100">Product Name</th>             
              <th width="100">Description</th>     
              <th width="100">Price</th>           
              <th width="50">Edit</th>
              <th width="50">Delete</th>
            </tr>
        </thead>
        <tbody>
          <% for(let i=0; i < products.length; i++) { %>
            <tr>
              <td><a href="/category/<%= products[i].category.categoryId %>" ><%= products[i].category.categoryName %></a></td>   
              <td><img src = "/images/<%= products[i].productImage %>" width="80%"></td>
              <td><%= products[i].productName %></td>
              <td><%= products[i].productDescription %></td>
              <td>$<%= products[i].productPrice %></td>
              <!-- Edit Link -->
              <td><a href="/editProduct/<%= products[i].productId %>">Edit</a></td>
              <!-- Delete Link -->
              <td><a href="/deleteProduct/<%= products[i].productId %>" onclick="return confirm('Are you sure you want to delete this product?')">Delete</a></td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
</body>
</html>